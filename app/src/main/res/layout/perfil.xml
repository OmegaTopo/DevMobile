<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Perfil">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="332dp"
        android:layout_height="77dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="123dp"
        android:src="@drawable/logo_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/retanguloMeio"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:background="#202020"
        tools:layout_editor_absoluteY="297dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nerd"
        android:layout_width="55dp"
        android:layout_height="23dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="299dp"
        android:text=" NERD "
        android:textColor="@color/yellow"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/.com"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="299dp"
        android:text=" .com "
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/data"
        android:layout_width="204dp"
        android:layout_height="23dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="299dp"
        android:text=" 2023 - De 20/10 à 25/10 "
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/local"
        android:layout_width="395dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="320dp"
        android:text=" Porto Alegre/RS - FIERGS Av. Assis Brasil, 8787 "
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/perfil_image"
        android:layout_width="434dp"
        android:layout_height="126dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="404dp"
        android:src="@drawable/perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exit_account"
        android:layout_width="119dp"
        android:layout_height="22dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="534dp"
        android:text="Sair da Conta "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/terms_policies"
        android:layout_width="273dp"
        android:layout_height="44dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="574dp"
        android:text="Termos e Políticas de privacidade Nerd.com "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/atendimento"
        android:layout_width="109dp"
        android:layout_height="23dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="634dp"
        android:text="Atendimento"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/about_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/about_app"
        android:layout_width="106dp"
        android:layout_height="23dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="674dp"
        android:text="Sobre o APP"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/retanguloFinal"
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:background="#202020"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/favoritos"
        android:layout_width="86dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="876dp"
        android:text="FAVORITOS"
        android:textColor="#2092B6"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventos"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="876dp"
        android:text="EVENTOS"
        android:textColor="#2092B6"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingressos"
        android:layout_width="88dp"
        android:layout_height="20dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="876dp"
        android:text="INGRESSOS"
        android:textColor="#2092B6"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/perfil"
        android:layout_width="54dp"
        android:layout_height="20dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="876dp"
        android:text="PERFIL"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>